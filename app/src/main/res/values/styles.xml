<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tvWhiteHeading">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="tvBlackHeading">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="btColor">
        <item name="android:background">@drawable/sqr_shape</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btOutline">
        <item name="android:background">@drawable/shape_outline</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/c10</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tvSubHeading">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">16sp</item>
    </style>



    <style name="ivRoundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="tvWhiteSubHeading">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tvBoxStyle" parent="tvSubHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_lt_gray</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>